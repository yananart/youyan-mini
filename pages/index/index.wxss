.header {
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 999;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    box-sizing: border-box;
    padding: 20rpx 10rpx 20rpx 10rpx;
    background-color: #f6f6f6;
    height: 150rpx;
}

@media (prefers-color-scheme: dark) {
    .header {
        background-color: #000000;
    }
}


.title-item {
    height: 100rpx;
    width: 250rpx;
    padding-left: 30rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    justify-content: space-between;
}

.title-time {
    height: 100rpx;
    width: 200rpx;
    padding-left: 30rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    justify-content: space-between;
}

.title-item .line1-text {
    font-size: small;
}

.link-top {
    width: 1rpx;
    height: 110rpx;
    border-right: solid #ACC0D8 1rpx;
}


.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    box-sizing: border-box;
    padding-top: 150rpx;
}


.bill-list {
    width: 100%;
}


.bill-list .bill-item {
    padding: 15rpx 30rpx 15rpx 30rpx;
}


.bill-item .bill-icon {
    /* padding: 0 10rpx 0 0; */
}


.bill-item .bill-desc {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-left: 30rpx;
}