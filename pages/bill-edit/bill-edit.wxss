@import '../../app.wxss';

.header {
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 999;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    box-sizing: border-box;
    background-color: var(--main-l2-color);
    height: 100rpx;
    padding: 10rpx;
}

.header .bill-type {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.header .bill-type .item {
    width: 250rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    text-align: center;
    border-width: 2rpx;
    border-style: solid;
    border-color: var(--reverse-l2-color);
}

.header .bill-type .left {
    border-top-left-radius: 15rpx;
    border-bottom-left-radius: 15rpx;
    margin-right: -1rpx;
}

.header .bill-type .right {
    border-top-right-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
    margin-left: -1rpx;
}

.header .bill-type .select {
    color: var(--main-l2-color);
    background-color: var(--reverse-l2-color);
}

.body {
    margin-top: 100rpx;
    display: grid;
    width: 100%;
    grid-template-columns: repeat(4, 25%);
    grid-template-rows: repeat(auto, 25%);
    grid-auto-rows: 175rpx;
    grid: 20rpx;
    justify-content: center;
    box-sizing: border-box;
    padding: 20rpx;
}

.body .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.item .category {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.item .category-icon {
    display: flex;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    justify-content: center;
    justify-items: center;
    align-content: center;
    align-items: center;
    text-align: center;
    background-color: var(--main-l2-color);
    font-size: 50rpx;
}

.item .category-select {
    background-color: var(--main-l3-color);
}

.item .category-name {
    margin-top: 5rpx;
}

.bill-editer {
    padding: 0rpx;
    background-color: var(--main-l2-color);
}

.bill-editer .input {
    padding: 10rpx 5rpx 10rpx 5rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.bill-editer .input .amount {
    width: 100%;
    padding-right: 20rpx;
    font-size: 50rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.bill-editer .input .describe {
    margin-top: 10rpx;
    background-color: var(--main-l1-color);
    border-radius: 10rpx;
    padding: 5rpx 20rpx 5rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
    font-size: 30rpx;
    font-weight: 350;
    display: flex;
    flex-direction: row;
    justify-content: baseline;
    align-items: center;
}

.bill-editer .input .describe .editer {
    flex-grow: 1;
}

.bill-editer .keyboard {
    padding: 0 1rpx 1rpx 0;
    display: grid;
    width: 100%;
    grid-template-columns: repeat(4, 25%);
    grid-template-rows: repeat(4, 100rpx);
    box-sizing: border-box;
    padding-bottom: env(safe-area-inset-bottom);
}

.bill-editer .keyboard .key {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    border: var(--default-border-color);
    border-width: 1rpx;
    border-style: solid;
    margin: 0 -1rpx -1rpx 0;
}

.bill-editer .keyboard .finish {
    background-color: var(--theme-color);
    color: white;
}

.bill-editer .keyboard .key-hover {
    background-color: var(--default-border-color);
}

.bill-editer .keyboard .finish-hover {
    background-color: var(--theme-select-color);
}

.bill-editer .keyboard .key .picker {
    position: relative;
    width: 100%;
    height: 100%;
}

.bill-editer .keyboard .key .picker-text {
    position: absolute;
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.bill-editer .weui-half-screen-dialog__hd {
    padding: 20rpx 10rpx 20rpx 10rpx;
}

.bill-editer .weui-half-screen-dialog__bd {
    /* word-wrap: break-word;
    -webkit-hyphens: auto;
    hyphens: auto;
    overflow-y: auto; */
    padding: 0;
    /* color: var(--weui-FG-0); */
}

.bill-editer .weui-half-screen-dialog__ft {
    padding: 0;
}