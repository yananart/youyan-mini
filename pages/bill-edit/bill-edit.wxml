<view data-weui-theme="{{theme}}">

</view>

<view class="header">
    <view class="bill-type">
        <view class="item left {{select===0?'select':''}}" bindtap="selectOutlay">支出</view>
        <view class="item right {{select===1?'select':''}}" bindtap="selectIncome">收入</view>
    </view>
</view>

<view class="body">
    <block wx:for="{{category[select]}}">
        <view class="item">
            <view class="category-icon" bindtap="selectIcon" data-type="{{item}}">
                <text>{{item.icon}}</text>
            </view>
            <text class="category-name">{{item.name}}</text>
        </view>
    </block>
</view>

<view data-weui-theme="{{theme}}">
    <mp-half-screen-dialog extClass="bill-editer" closabled="{{false}}" show="{{showEdit}}" maskClosable>
        <view slot="title" style="font-size: 30rpx;">{{input}}</view>
        <view slot="desc" class="keyboard">
            <block wx:for="{{keyboardKeys}}">
                <block wx:if="{{index===3}}">
                    <view class="key" hover-class="key-hover" hover-start-time="10" hover-stay-time="50">
                        <picker class="picker" mode="date" start="1949-01-01" end="2100-12-31">
                            <view class="picker-text">{{item}}</view>
                        </picker>
                    </view>
                </block>
                <block wx:elif="{{index===15}}">
                    <view class="key" hover-class="key-hover" hover-start-time="10" hover-stay-time="50" bindtap="finishEdit">{{item}}</view>
                </block>
                <block wx:else>
                    <view class="key" hover-class="key-hover" hover-start-time="10" hover-stay-time="50" bindtap="hitKeyboard" data-key="{{item}}">{{item}}</view>
                </block>
            </block>
        </view>
        <view slot="footer"></view>
    </mp-half-screen-dialog>
</view>