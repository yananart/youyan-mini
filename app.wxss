page {
    --main-l1-color: #ffffff;
    --main-l2-color: #f6f6f6;
    --reverse-l1-color: #181818;
    --reverse-l2-color: #000000;
    --default-border-color: #d0d0d0;
}

@media (prefers-color-scheme: dark) {
    page {
        --main-l1-color: #181818;
        --main-l2-color: #000000;
        --reverse-l1-color: #ffffff;
        --reverse-l2-color: #f6f6f6;
        --default-border-color: #202020;
    }
}